<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@(this.ViewBag.Title) - Annagreg's blog</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @(this.Html.ActionLink("Annagreg's blog", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" }))
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@(this.Html.ActionLink("Начало", "Index", "Home"))</li>
                    <li>@(this.Html.ActionLink("За мен", "About", "Home"))</li>
                    <li>@(this.Html.ActionLink("Контаки", "Contact", "Home"))</li>
                    <li>@(this.Html.ActionLink("Фото", "Photo", "Home"))</li>
                    <li>@(this.Html.ActionLink("Във фурната", "Baker", "Home"))</li>
                </ul>
                @(this.Html.Partial("_LoginPartial"))
            </div>
        </div>
    </div>
    <div class="container body-content">
        @(this.RenderBody())
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Annagreg's blog</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @(this.RenderSection("scripts", required: false))
</body>
</html>
